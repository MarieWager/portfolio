---
import "../styles/generel.css";
import Menu from "../elements/Menu.astro";
import Footer from "../elements/Footer.astro";
const { title, meta } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={meta} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alata&family=League+Spartan:wght@100..900&family=Press+Start+2P&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body>
    <Menu elem1="Praktikanten" elem2="Projekter" elem3="Kontakt" />
    <div id="space"></div>
    <slot />
    <div id="space"></div>

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: clip;
  }
  * {
    box-sizing: border-box;
  }

  #space {
    padding: 2rem;
  }
</style>
