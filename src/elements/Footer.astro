---
import KontaktInfoCard from "../components/KontaktInfoCard.astro";
---

<article>
  <h1 class="over">Kontakt mig her</h1>

  <div class="sbs">
    <h1 class="under">Kontakt mig her</h1>

    <img src="/media/image_me.png" alt="" />

    <div class="kontakt">
      <KontaktInfoCard sted="Email" variant="gul" link="mailto:mariewpj@gmail.com" kontakt="Mariewpj@gmail.com" />
      <KontaktInfoCard sted="Telefonnummer" variant="rosa" link="tel:+4529176648" kontakt="29 17 66 48" />
      <KontaktInfoCard sted="LinkedIn" variant="lilla" link="https://www.linkedin.com/in/marie-jensen-031603222/" kontakt="in/marie-jensen-031603222/" />
    </div>
  </div>
</article>

<style>
  /** Mobile **/
  article {
    margin-bottom: 1rem;
  }

  .sbs {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1rem;
  }

  .over {
    display: none;
  }
  .under {
    display: block;
    grid-area: 1 / 1 / 2 / 2;
  }

  img {
    grid-area: 1 / 2 / 2 / 3;
    border-radius: 20px;
    border: var(--border-1);
    box-shadow: var(--shadow-drop);

    width: clamp(160px, 27vw, 300px);
  }

  .kontakt {
    grid-area: 2 / 1 / 5 / 3;
    display: grid;
    grid-template-rows: repeat(3, 1fr);
    gap: 1rem;
    height: 100px;
  }

  /** Desktop **/
  @media (min-width: 860px) {
    article {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;

      justify-content: center;
    }
    .under {
      display: none;
    }
    .over {
      grid-area: 1 / 1 / 2 / 2;
      display: block;
      justify-self: center;
    }

    .sbs {
      grid-area: 2 / 1 / 5 / 2;

      display: grid;
      grid-template-columns: 1fr 4fr;
      grid-template-rows: 1fr;
      grid-column-gap: 0px;
      grid-row-gap: 0px;
      gap: 3rem;

      padding: clamp(50px, 5vw, 100px);

      border-radius: 20px;
      border: var(--border-1);
      box-shadow: var(--shadow-drop);
    }

    img {
      grid-area: 1 / 1 / 2 / 2;
      width: clamp(160px, 35vw, 300px);
    }
    .kontakt {
      grid-area: 1 / 2 / 2 / 3;
    }
  }
</style>
