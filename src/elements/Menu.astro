---
const { elem1, elem2, elem3 } = Astro.props;
---

<header>
  <div class="search_bar">
    <div class="search_icon"></div>
    <nav class="nav">
      <ul class="menu">
        <li><a href=`#${elem1}` aria-label=`Go to ${elem1}`>{elem1}</a></li>
        <li><a href=`#${elem2}` aria-label=`Go to ${elem2}`>{elem2}</a></li>
        <li><a href=`#${elem3}` aria-label=`Go to ${elem3}`>{elem3}</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  @media (min-width: 900px) {
  }

  /* Opacity-effekt */
  #header {
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  #header.scrolled {
    opacity: 0.8;
    z-index: 3000;
  }

  #header:hover,
  #header:focus-within {
    opacity: 1;
    z-index: 3000;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("header");

    // Scroll opacity effect
    if (header) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
          header.classList.add("scrolled");
        } else {
          header.classList.remove("scrolled");
        }
      });
    }
  });
</script>
